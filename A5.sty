\newenvironment{intro}%
{\list{}{%
		\parskip 8pt%
		\topsep -4pt%
		\listparindent 0em%
		\itemindent    0pt%
		\leftmargin    0pt %\leaderIndent%
		\rightmargin   0pt%
		\parsep        0pt}
	\fontsize{12.5}{16}\selectfont
	\item[] \centering}%
{\endlist}

\newenvironment{outro}%
{\list{}{%
		\parskip 0pt%
		\topsep 10pt%
		\listparindent 0em%
		\itemindent    0pt%
		\leftmargin    0.5cm %\leaderIndent%
		\rightmargin   0.5cm%
		\parsep        -8pt
		\fontsize{12}{16}\selectfont
	}%
	\item[] \centering\scshape\bfseries}%
{\endlist}

\renewenvironment{center}%
{\list{}{%
		\parskip -10pt%
		\topsep -4pt%
		\listparindent 0em%
		\itemindent    0pt%
		\leftmargin    0pt %\leaderIndent%
		\rightmargin   0pt%
		\parsep        0pt}
	\fontsize{12.5}{16}\selectfont
	\item[] \centering}%
{\endlist}

\newenvironment{hanging-indent}%
{\list{}{%
		\topsep 0pt
		\listparindent 0em%
		\itemindent    -0.5em%
		\leftmargin    0.5em %2.5em %\leaderIndent%
		\rightmargin   0em%
		\fontsize{12.5}{16}\selectfont
		\parsep        \z@ \@plus\p@%
	}%
	\item[] \raggedright}%
{\endlist}

% Enables a line to hang that is sandwiched within a paragraph
\newenvironment{hanging-indent-together}%
{\list{}{%
		\topsep -8pt
		\listparindent 0em%
		\itemindent    -0.75em%
		\leftmargin    0.75em %2.5em %\leaderIndent%
		\rightmargin   0em%
		\fontsize{12.5}{16}\selectfont
		\parsep        -8pt %\z@ \@plus\p@%
	}%
	\item[] \raggedright}%
{\endlist}

